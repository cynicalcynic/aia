{
  "name": "responsive-design",
  "version": "1.0.0",
  "description": "Responsive design assigment",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"sass --watch scss/style.scss css/style.css\" \"live-server --watch=*.html,css/*.css,assets/* --no-browser\"",
    "build": "sass scss/style.scss css/style.css --style compressed",
    "start": "http-server"
  },
  "author": "Michał Świderski",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^5.1.0",
    "http-server": "^0.12.1",
    "live-server": "^1.2.1",
    "node-sass": "^4.13.1"
  }
}
